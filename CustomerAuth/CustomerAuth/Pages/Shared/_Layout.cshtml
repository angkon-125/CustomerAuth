@{
    Layout = null;
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CustomerAuth</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark px-4">
        <a class="navbar-brand" asp-page="/Index">CustomerAuth</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>

                @if (HttpContextAccessor.HttpContext.Session.GetString("UserEmail") != null)
                {
                    <li class="nav-item"><a class="nav-link" asp-page="/UserList">User List</a></li>
                    <li class="nav-item"><a class="nav-link" asp-page="/Profile">Profile</a></li>

                    @* Profile Image logic directly in C# *@
                    var userImg = HttpContextAccessor.HttpContext.Session.GetString("UserImage");
                    var imgSrc = string.IsNullOrEmpty(userImg)
                    ? "/images/default-user.png"
                    : $"/uploads/{userImg}";

                    <li class="nav-item d-flex align-items-center ms-2">
                        <img src="@imgSrc" class="rounded-circle border border-light"
                             alt="Profile" width="35" height="35"
                             style="object-fit: cover;" />
                    </li>
                }
            </ul>
        </div>
    </nav>

    <main class="container mt-5">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
