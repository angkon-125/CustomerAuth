@page
@model CustomerAuth.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="profile-container">
    <div class="profile-card">
        <h2 class="profile-title">Profile</h2>

        @if (Model.User == null)
        {
            <div class="alert alert-warning">
                <p>No user found. Please <a asp-page="/SignIn" class="alert-link">sign in</a>.</p>
            </div>
        }
        else
        {
            <div class="profile-content">
                <div class="profile-header">
                    <img src="@Model.ProfileImage" alt="Profile Picture" class="profile-image" />
                    <div class="profile-info">
                        <h4 class="profile-name">@Model.User.First_name @Model.User.Last_name</h4>
                        <p class="profile-email">@Model.User.Email</p>
                        <p class="profile-username">Username: @Model.User.username</p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-success">
                        @Model.Message
                    </div>
                }

                <form method="post" asp-page-handler="Logout" class="logout-form">
                    <button type="submit" class="btn btn-secondary">Logout</button>
                </form>
            </div>
        }
    </div>
</div>

<style>
    .profile-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background-color: #f8f9fa;
    }

    .profile-card {
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

    .profile-title {
        color: #2c3e50;
        font-weight: 600;
        font-size: 28px;
        margin-bottom: 30px;
        text-align: center;
    }

    .profile-content {
        text-align: center;
    }

    .profile-header {
        margin-bottom: 30px;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #e9ecef;
        margin-bottom: 20px;
    }

    .profile-name {
        color: #2c3e50;
        font-weight: 600;
        font-size: 24px;
        margin-bottom: 8px;
    }

    .profile-email {
        color: #6c757d;
        font-size: 16px;
        margin-bottom: 8px;
    }

    .profile-username {
        color: #6c757d;
        font-size: 14px;
        margin: 0;
    }

    .logout-form {
        width: 100%;
        margin-top: 20px;
    }

    .btn {
        width: 100%;
        padding: 14px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .alert {
        padding: 12px;
        border-radius: 6px;
        margin-top: 20px;
        font-size: 14px;
        text-align: center;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeaa7;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-link {
        color: #007bff;
        text-decoration: none;
        font-weight: 500;
    }

        .alert-link:hover {
            text-decoration: underline;
        }
</style>