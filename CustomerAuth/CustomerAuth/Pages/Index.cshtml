@page
@model CustomerAuth.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div>
    <img src=~/img/cutoutwiz_ltd_logo.jpg class="img-fluid rounded mx-auto d-block" alt="Responsive image" />

</div>

<div class="text-center">
    <h2>Welcome to The CutoutWiz Company</h2>
    <p class="mt-3">
        <a class="btn btn-info btn-glow" asp-page="/SignIn">Sign In</a>
        <a class="btn btn-success btn-glow" asp-page="/SignUp">Sign Up</a>
    </p>
</div>

    <style>
        .btn-glow.glow {
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
            transition: box-shadow 0.3s ease-in-out;
        }

    </style>

