@page
@model CustomerAuth.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="home-container">
    <div class="home-content">
        <div class="logo-section">
            <img src="~/img/cutoutwiz_ltd_logo.jpg" class="logo-image" alt="CutoutWiz Ltd Logo" />
        </div>

        <div class="welcome-section">
            <h2 class="welcome-title">Welcome to The CutoutWiz Company</h2>
            <p class="welcome-subtitle">Join our community and get started today</p>

            <div class="action-buttons">
                <a class="btn btn-primary btn-home" asp-page="/SignIn">Sign In</a>
                <a class="btn btn-success btn-home" asp-page="/SignUp">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<style>
    .home-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        background-color: #f8f9fa;
    }

    .home-content {
        text-align: center;
        max-width: 600px;
        width: 100%;
    }

    .logo-section {
        margin-bottom: 40px;
    }

    .logo-image {
        max-width: 300px;
        height: auto;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .welcome-section {
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .welcome-title {
        color: #2c3e50;
        font-weight: 600;
        font-size: 32px;
        margin-bottom: 16px;
    }

    .welcome-subtitle {
        color: #6c757d;
        font-size: 18px;
        margin-bottom: 30px;
    }

    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-home {
        padding: 14px 32px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        min-width: 140px;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(52, 152, 219, 0.3);
        }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(40, 167, 69, 0.3);
        }

    @@media (max-width: 768px) {
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-home {
            width: 100%;
            max-width: 200px;
        }

        .welcome-title {
            font-size: 28px;
        }

        .welcome-subtitle {
            font-size: 16px;
        }
    }
</style>