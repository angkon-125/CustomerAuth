@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CustomerAuth</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark px-4">
        <a class="navbar-brand" asp-page="/Index">CustomerAuth</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-page="/SignIn">Sign In</a></li>
                <li class="nav-item"><a class="nav-link" asp-page="/SignUp">Sign Up</a></li>
                <li class="nav-item"><a class="nav-link" asp-page="/Profile">Profile</a></li>
                <li class="nav-item"><a class="nav-link" asp-page="/UserList">UserList</a></li>
            </ul>
        </div>
    </nav>

    <main class="container mt-5">
        @RenderBody()
    </main>

    <footer>
        © @DateTime.Now.Year CustomerAuth | Next-Gen UI
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
