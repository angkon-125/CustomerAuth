@page
@model CustomerAuth.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h2 class="mb-4">Profile</h2>

@if (Model.User == null)
{
    <p>No user found. Please <a asp-page="/SignIn">sign in</a>.</p>
}
else
{
    <div class="card p-4 text-center">
        <img src="@Model.ProfileImage" alt="Profile Picture" class="rounded-circle mb-3" width="150" height="150" />
        <h4>@Model.User.First_name @Model.User.Last_name</h4>
        <p class="text-muted">@Model.User.Email</p>

        <form method="post" enctype="multipart/form-data" class="mt-4">
            <div class="mb-3">
                <input type="file" name="ProfileImage" class="form-control" accept="image/*" required />
            </div>
            <button type="submit" class="btn btn-info btn-glow">Update Profile Image</button>
        </form>

        <form method="post" asp-page-handler="Logout" class="mt-3">
            <button type="submit" class="btn btn-danger btn-glow">Logout</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="mt-3 text-success">@Model.Message</p>
        }
    </div>
}
